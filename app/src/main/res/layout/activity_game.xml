<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#ffffff">
    <TextView android:id="@+id/otsikko"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text=""
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:background="#ffffff"
        />
    <TextView android:id="@+id/peli_vuoro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text=""
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:textColor="#000000"/>

    <TableLayout android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:weightSum="3">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff">

            <Button android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:text="@string/alkuarvo"
                android:onClick="asetaPelimerkki"
                android:textSize="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_custom"
                style="@style/buttonStyle"/>

            <Button android:id="@+id/button21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:text="@string/alkuarvo"
                android:onClick="asetaPelimerkki"
                android:textSize="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_custom"
                style="@style/buttonStyle"/>

            <Button android:id="@+id/button31"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:text="@string/alkuarvo"
                android:onClick="asetaPelimerkki"
                android:textSize="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_custom"
                style="@style/buttonStyle"/>

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff">

            <Button android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:text="@string/alkuarvo"
                android:onClick="asetaPelimerkki"
                android:textSize="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_custom"
                style="@style/buttonStyle"/>

            <Button android:id="@+id/button22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:text="@string/alkuarvo"
                android:onClick="asetaPelimerkki"
                android:textSize="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_custom"
                style="@style/buttonStyle"/>

            <Button android:id="@+id/button32"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:text="@string/alkuarvo"
                android:onClick="asetaPelimerkki"
                android:textSize="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_custom"
                style="@style/buttonStyle"/>

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff">

            <Button android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:text="@string/alkuarvo"
                android:onClick="asetaPelimerkki"
                android:textSize="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_custom"
                style="@style/buttonStyle"/>

            <Button android:id="@+id/button23"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:text="@string/alkuarvo"
                android:onClick="asetaPelimerkki"
                android:textSize="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_custom"
                style="@style/buttonStyle"/>

            <Button android:id="@+id/button33"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:text="@string/alkuarvo"
                android:onClick="asetaPelimerkki"
                android:textSize="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_custom"
                style="@style/buttonStyle"/>

        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <Button android:id="@+id/uusi_peli_nappula"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/uusi_peli"
            android:onClick="uusiPeli"
            android:visibility="invisible"
            android:layout_weight="1"/>

        <Button android:id="@+id/takaisin_nappula"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Takaisin"
            android:onClick="takaisinValikkoon"
            android:visibility="invisible"
            android:layout_weight="1"/>

</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="@string/credits"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#ffffff"/>
</LinearLayout>
